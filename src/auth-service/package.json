{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Auth microservice for banking platform",
  "main": "dist/main.js",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "build": "rimraf dist && nest build",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "prisma migrate dev --schema=./prisma/schema.prisma",
    "start:worker": "ts-node src/worker.ts",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts}\" --fix",
    "prettier": "prettier --check \"src/**/*.{js,ts,json,md}\"",
    "prettier:fix": "prettier --write \"src/**/*.{js,ts,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start:prod": "node dist/src/main.js",
    "start:worker:prod": "node dist/src/worker.js"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.4.17",
    "@nestjs/platform-express": "^10.4.17",
    "@nestjstools/microservices-rabbitmq": "^1.1.0",
    "@prisma/client": "^6.6.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.7",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "eslint": "^9.25.1",
    "ioredis": "^5.6.1",
    "nodemailer": "^6.10.1",
    "prettier": "^3.5.3",
    "reflect-metadata": "^0.1.13",
    "@nestjs/swagger": "^7.4.2",
    "swagger-ui-express": "^5.0.1",
    "rxjs": "^7.8.2",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/testing": "^10.4.18",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.2",
    "@types/nodemailer": "^6.4.17",
    "@types/speakeasy": "^2.0.10",
    "jest": "^29.7.0",
    "prisma": "^6.6.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  }
}
