{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "types": ["node", "jest"],
    "paths": {
      "@app/common": ["../libs/common/src"],
      "@app/common/*": ["../libs/common/src/*"]
    }
  },
  "include": ["**/*.ts", "common/guards", "common/exceptions", "../../libs/common/src/**/*"],
  "exclude": ["node_modules", "dist"]
} 