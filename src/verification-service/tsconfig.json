{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "types": ["node", "jest"]
  },
  // "include": ["**/*.ts", "common/guards", "common/exceptions"],
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
} 